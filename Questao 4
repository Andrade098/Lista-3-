#include <stdio.h>
#include <stdlib.h>

int main()
{
    int vetor[5];
    float media = 0;

    for(int i = 0; i < 5; i++)
    {
        printf("Informe uma idade : ");
        scanf("%d",&vetor[i]);
        media += vetor[i];
    }
    media = media/5;

    printf("\n----Idades maiores que 18 anos----\n");
    for(int i = 0; i < 5; i++)
    {
        if(vetor[i] > 18)
        {
            printf("%d\n",vetor[i]);
        }
    }
    printf("Media : %f",media);
    return 0;
}
